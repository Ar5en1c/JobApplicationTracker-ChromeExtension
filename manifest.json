{
  "manifest_version": 2,
  "name": "Job Application Data Extractor",
  "version": "1.0",
  "description": "Automatically extract and store job application data.",
  "content_scripts": [
    {
      "matches": ["*://jobs.lever.co/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["storage", "tabs"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": ["popup.html"]
}
